{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Debug)",
            "linux": {
                "type": "shell",
                "command": "cmake",
                "args": [
                    "--build",
                    "${workspaceFolder}/build",
                    "--config",
                    "Debug",
                    "--target",
                    "debug"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "problemMatcher": [
                    "$gcc"
                ]
            },
            "windows": {
                "command": "cmake",
                "args": [
                    "--build",
                    "${workspaceFolder}\\build",
                    "--config",
                    "Debug",
                    "--target",
                    "debug"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "problemMatcher": [
                    "$msCompile"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
