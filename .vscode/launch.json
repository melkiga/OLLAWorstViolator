    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/bin/Debug/osvm_unit_tests",
                "args": [],
                "stopAtEntry": false,
                "cwd": "${workspaceFolder}",
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Testing osvm",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
        },
        {
            "name": "Test (Win32)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\test\\bin\\Release\\osvm_unit_tests.exe",
                "args": [],
                "stopAtEntry": false,
                "cwd": "${workspaceFolder}",
                "externalConsole": false,
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Enterprise\\VC\\Tools\\MSVC\\14.16.27023\\bin\\Hostx64\\x64\\cl.exe",
                "setupCommands": [
                    {
                        "description": "Testing osvm",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
        },
        {
            "name": "Debug osvm",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/osvm",
            "cwd": "${workspaceFolder}",
            "args": ["-i", "5", "-o", "5", "-d", "true", "-t", "test/examples/example.json", "small-data\\iris"],
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Debugging osvm",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
